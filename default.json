{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableDigestUpdates",
    ":semanticCommitsDisabled",
    "config:recommended",
    "schedule:weekly"
  ],
  "prConcurrentLimit": 0,
  "minimumReleaseAge": "3 days",
  "baseBranches": ["main"],
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["patch"]
    }
  ]
}
